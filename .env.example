# üîê KRSN-RT2I Environment Configuration Template
# Copy this file to .env and update the values according to your setup

# üóÑÔ∏è Database Configuration
DATABASE_URL=sqlite:///./data/rtip.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# üîë Security & Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-access-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# External API Keys
VIRUSTOTAL_API_KEY=your-virustotal-api-key
MISP_URL=https://your-misp-instance.com
MISP_API_KEY=your-misp-api-key
OTXV2_API_KEY=your-alienvault-otx-api-key

# SIEM Integration Settings
SPLUNK_URL=https://your-splunk-instance:8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=your-splunk-password
SPLUNK_TOKEN=your-splunk-hec-token
SPLUNK_INDEX=rtip_threats

ELASTICSEARCH_HOSTS=localhost:9200 / your-instance-link
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key
ELASTICSEARCH_INDEX_PREFIX=rtip

QRADAR_URL=https://your-qradar-instance
QRADAR_API_TOKEN=your-qradar-api-token

# Grafana Integration
GRAFANA_URL=http://localhost:3000
GRAFANA_TOKEN=your-grafana-api-token

# Threat Hunting Configuration
THREAT_HUNTING_MAX_RESULTS=5000
THREAT_HUNTING_DEFAULT_LIMIT=1000

# Webhook Configuration
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT_SECONDS=30

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL_SECONDS=60
HEALTH_CHECK_ENABLED=true

# Training Module Configuration
TRAINING_ENABLED=true
TRAINING_PROGRESS_TRACKING=true
